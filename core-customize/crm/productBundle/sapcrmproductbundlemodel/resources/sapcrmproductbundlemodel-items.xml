			xsi:noNamespaceSchemaLocation="items.xsd">

	<relations>		        
		<!-- The one-to-many relationship between default Products and dependent BundleTemplates -->
        <relation
            generate="true"             
            localized="false"           
            code="BundleTemplate2BundleProductRelation"  
            autocreate="true">
            <sourceElement type="BundleTemplate" qualifier="bundleTemplate" cardinality="one"/>
            <targetElement collectiontype="list" type="BundleProduct" qualifier="bundleProducts" cardinality="many"/>
        </relation>		        
