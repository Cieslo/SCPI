	<bean id="sapcpicrmticketsystemSystemSetup"
		class="sap.sapcpicrmticketsystem.setup.SapcpicrmticketsystemSystemSetup">
		<!-- constructor arg injection example -->
		<constructor-arg ref="sapcpicrmticketsystemService" />
	</bean>

	<bean id="sapcpicrmticketsystemService"
		class="sap.sapcpicrmticketsystem.service.impl.DefaultSapcpicrmticketsystemService">
		<!-- setter injection example -->
		<property name="modelService" ref="modelService" />
		<property name="mediaService" ref="mediaService" />
		<property name="flexibleSearchService" ref="flexibleSearchService" />
	</bean>

	<!-- Conversion Service Configuration -->

	<alias alias="serviceTktConvService" name="sapCpiServiceTicketConversionService" />
	<bean id="sapCpiServiceTicketConversionService"
		class="sap.sapcpicrmticketsystem.service.impl.SAPCpiOutboundServiceTicketConversionServiceImpl">

		<property name="globalConfigurationDAO" ref="sapCoreSAPGlobalConfigurationDAO" />
		<property name="modelService" ref="modelService" />
		<property name="baseStoreService" ref="baseStoreService" />
		<property name="ticketStateMap" ref="ticketStateMap" />
		<property name="ticketPriorityMap" ref="ticketPriorityMap" />
		<property name="ticketCategoryMap" ref="ticketCategoryMap" />
	</bean>

	<util:map id="ticketStateMap" map-class="java.util.HashMap">
		<entry key="New" value="E0001" />
		<entry key="Open" value="E0002" />
		<entry key="Closed" value="E0005" />
	</util:map>

	<util:map id="ticketPriorityMap" map-class="java.util.HashMap">
		<entry key="Low" value="9" />
		<entry key="Medium" value="5" />
		<entry key="High" value="3" />
	</util:map>

	<util:map id="ticketCategoryMap" map-class="java.util.HashMap">
		<entry key="Incident" value="Z001" />
		<entry key="Complaint" value="Z002" />
		<entry key="Fraud" value="Z003" />
		<entry key="Note" value="Z004" />
		<entry key="Problem" value="Z005" />
		<entry key="Enquiry" value="Z006" />
		<entry key="CAT1" value="Z016" />
		<entry key="CAT3" value="Z018" />
	</util:map>

	<!-- Export Service Configuration -->
	<alias alias="ticketExportService" name="sapCpiServiceTicketExportService" />
	<bean id="sapCpiServiceTicketExportService"
		class="sap.sapcpicrmticketsystem.service.impl.ServiceTicketExportService"
		parent="defaultCsTicketExportService">
		<property name="sapCpiServiceTicketConversionService" ref="serviceTktConvService" />
		<property name="serviceTicketOutboundService" ref="serviceTktOutboundService" />
	</bean>

	<!-- Outbound Service Configuration -->

	<alias alias="serviceTktOutboundService" name="sapCpiServiceTicketOutboundService" />
	<bean id="sapCpiServiceTicketOutboundService"
		class="sap.sapcpicrmticketsystem.service.impl.SapCpiServiceTicketOutboundServiceImpl">
		<property name="outboundServiceFacade" ref="outboundServiceFacade" />
	</bean>

	
	<bean id="serviceTicketPersistenceHook"
          class="sap.sapcpicrmticketsystem.scpi.inbound.events.SapCpiCrmServiceTicketPersistenceHook">
        <property name="modelService" ref="modelService"/>
        <property name="sapCategoriesService" ref="sapCategoriesService"/>
        <property name="ticketEventEmailStrategy" ref="ticketEventEmailStrategy"/>
        <property name="ticketEventStrategy" ref="ticketEventStrategy"/>
        <property name="ticketDao" ref="ticketDao"/>
    </bean>



</beans>
