	<alias name="defaultBusinessAgreementFacade" alias="businessAgreementFacade" />
	<bean id="defaultBusinessAgreementFacade"
		class="com.sap.hybris.sapbusinessagreementfacades.facade.impl.DefaultBusinessAgreementFacade">
		<property name="businessAgreementService" ref="businessAgreementService" />
		<property name="userService" ref="userService" />
		<property name="agreementHistoryConverter" ref="agreementHistoryConverter" />
		<property name="businessAgreementB2CConverter" ref="businessAgreementB2CConverter" />	
	</bean>
	<alias name="defaultBusinessAgreementB2CConverter" alias="businessAgreementB2CConverter" />
	<bean id="defaultBusinessAgreementB2CConverter" parent="abstractPopulatingConverter">
		<property name="targetClass"
			value="com.sap.hybris.sapbusinessagreementfacades.data.BusinessAgreementDetailsData"></property>
		<property name="populators">
			<list>
				<ref bean="customerBAPopulator" />
			</list>
		</property>
	</bean>
	
	<alias name="defaultCustomerBAPopulator" alias="customerBAPopulator"/>
	<bean id="defaultCustomerBAPopulator"
			class="com.sap.hybris.crm.sapbusinessagreementfacades.converters.populator.DefaultBusinessAgreementB2CDetailPopulator">
			<property name="addressConverter" ref="addressConverter"/>
			<property name="paymentMethodConverter" ref="paymentMethodConverter"/>
			
			<property name="creditCardPaymentInfoConverter" ref="creditCardPaymentInfoConverter"/>
	</bean>
	
	<alias name="defaultPaymentMethodConverter" alias="paymentMethodConverter" />
	<bean id="defaultPaymentMethodConverter" parent="abstractPopulatingConverter">
		<property name="targetClass"
			value="com.sap.hybris.sapbusinessagreementfacades.data.BusinessAgreementPaymentMethod"></property>
		<property name="populators">
			<list>
				<ref bean="paymentMethodPopulator" />
			</list>
		</property>
	</bean>
	
	<alias name="defaultPaymentMethodPopulator" alias="paymentMethodPopulator"/>
	<bean id="defaultPaymentMethodPopulator"
			class="com.sap.hybris.crm.sapbusinessagreementfacades.converters.populator.DefaultBusinessAgreementPaymentMethodPopulator">			
	</bean>

	<alias name="defaultAgreementHistoryConverter" alias="agreementHistoryConverter" />
	<bean id="defaultAgreementHistoryConverter" parent="abstractPopulatingConverter">
		<property name="targetClass"
			value="com.sap.hybris.sapbusinessagreementfacades.data.BusinessAgreementData"></property>
		<property name="populators">
			<list>
				<ref bean="agreementHistoryPopulator" />
			</list>
		</property>
	</bean>
	<alias name="defaultAgreementHistoryPopulator" alias="agreementHistoryPopulator"/>
	<bean id="defaultAgreementHistoryPopulator"
			class="com.sap.hybris.crm.sapbusinessagreementfacades.converters.populator.DefaultBusinessAgreementListPopulator">
<!-- 		<property name="enumerationService" ref="enumerationService"/> -->
