<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd">

	<!-- Converters -->
	<alias name="iBaseDataConverter" alias="iBaseDataConverter" />
	<bean id="iBaseDataConverter" parent="abstractPopulatingConverter">
		<property name="targetClass"
			value="com.sap.hybris.crm.sapcrmibasefacades.data.IBaseData" />
		<property name="populators">
			<list>
				<ref bean="iBaseDataPopulator" />
			</list>
		</property>
	</bean>
	<alias name="iBasePartnerConverter" alias="iBasePartnerConverter" />
	<bean id="iBasePartnerConverter" parent="abstractPopulatingConverter">
		<property name="targetClass"
			value="com.sap.hybris.crm.sapcrmibasefacades.data.IBasePartnerData" />
		<property name="populators">
			<list>
				<ref bean="iBasePartnerPopulator" />
			</list>
		</property>
	</bean>
	<alias name="iBaseDetailDataConverter" alias="iBaseDetailDataConverter" />
	<bean id="iBaseDetailDataConverter" parent="abstractPopulatingConverter">
		<property name="targetClass"
			value="com.sap.hybris.crm.sapcrmibasefacades.data.IBaseDetailData" />
		<property name="populators">
			<list>
				<ref bean="iBaseDetailDataPopulator" />
			</list>
		</property>
	</bean>

	<!-- Populators -->
	<bean id="iBaseDataPopulator"
		class="com.sap.hybris.crm.sapcrmibasefacades.converters.populator.IBaseDataPopulator" />
	<bean id="iBaseDetailDataPopulator"
		class="com.sap.hybris.crm.sapcrmibasefacades.converters.populator.IBaseDetailDataPopulator" />
	<bean id="iBasePartnerPopulator"
		class="com.sap.hybris.crm.sapcrmibasefacades.converters.populator.IBasePartnerPopulator" />

	<!-- Facade for IBase -->
	<alias name="defaultIBaseFacade" alias="iBaseFacade" />
	<bean id="defaultIBaseFacade"
		class="com.sap.hybris.crm.sapcrmibasefacades.ibase.impl.DefaultIBaseFacade" />

</beans>
